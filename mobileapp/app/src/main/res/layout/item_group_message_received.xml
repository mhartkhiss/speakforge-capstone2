<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/default_userpic"
            app:civ_border_width="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="2dp"
                android:text="Sender Name"
                android:textColor="#616161"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"
                app:cardBackgroundColor="#03A9F4"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <!-- Reply Preview Container -->
                    <LinearLayout
                        android:id="@+id/replyPreviewContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="@drawable/black_reply_background"
                        android:elevation="2dp"
                        android:padding="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="8dp">
                        
                        <TextView
                            android:id="@+id/textViewReplySender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />
                        
                        <TextView
                            android:id="@+id/textViewReplyContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Original message"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="#E0E0E0" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:maxWidth="260dp"
                        android:paddingStart="16dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="10dp"
                        android:text="Message text"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <com.example.appdev.utils.LoadingDotsView
                        android:id="@+id/loadingDots"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingVertical="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:visibility="gone"
                        app:dotColor="#FFFFFF"
                        app:dotSize="8sp"
                        app:animationDuration="400"
                        app:animationDelay="300"
                        app:scaleMultiplier="2.0"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewOriginalMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/poppins"
        android:text="Original message"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>
