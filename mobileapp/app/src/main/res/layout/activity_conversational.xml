<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="12dp">

    <!-- User 2 Section (Top, Upside Down) -->
    <LinearLayout
        android:id="@+id/user2Section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:rotation="180"
        android:padding="12dp">

        <!-- Language Selection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_language"
                    android:layout_marginStart="8dp"
                    app:tint="@color/user2_color"/>

                <Spinner
                    android:id="@+id/user2LanguageSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:minWidth="120dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Translation Result Card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp">

            <TextView
                android:id="@+id/user2Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="32sp"
                android:fontFamily="@font/poppins"
                android:lineSpacingExtra="8dp"
                android:padding="24dp"
                android:background="@drawable/speech_bubble_user2"/>

            <com.example.appdev.utils.LoadingDotsView
                android:id="@+id/user2LoadingDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/user2SpeakButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_mic"
                app:fabSize="normal"
                app:backgroundTint="@color/user2_color"
                app:tint="@android:color/white"
                app:elevation="0dp"
                android:layout_margin="8dp"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- Divider with Icon -->
    <LinearLayout
        android:id="@+id/centerDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#E3F2FD"/>

        <ImageView
            android:id="@+id/conversationalIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_translate_fragment"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#E3F2FD"/>
    </LinearLayout>

    <!-- User 1 Section (Bottom, Normal) -->
    <LinearLayout
        android:id="@+id/user1Section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Language Selection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_language"
                    android:layout_marginStart="8dp"
                    app:tint="@color/user1_color"/>

                <Spinner
                    android:id="@+id/user1LanguageSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:minWidth="120dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Translation Result Card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp">

            <TextView
                android:id="@+id/user1Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="32sp"
                android:fontFamily="@font/poppins"
                android:lineSpacingExtra="8dp"
                android:padding="24dp"
                android:background="@drawable/speech_bubble_user1"/>

            <com.example.appdev.utils.LoadingDotsView
                android:id="@+id/user1LoadingDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/user1SpeakButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_mic"
                app:fabSize="normal"
                app:backgroundTint="@color/user1_color"
                app:tint="@android:color/white"
                app:elevation="0dp"
                android:layout_margin="8dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout> 