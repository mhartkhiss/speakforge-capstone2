<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_gradient_background"
    android:padding="12dp">

    <!-- User 2 Section (Top, Upside Down) -->
    <LinearLayout
        android:id="@+id/user2Section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:rotation="180"
        android:padding="12dp">

        <!-- Language Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/glass_pill_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_language"
                android:layout_marginStart="8dp"
                app:tint="@color/user2_color"/>

            <Spinner
                android:id="@+id/user2LanguageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@null"
                android:minWidth="120dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <!-- Translation Result Card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp">

            <TextView
                android:id="@+id/user2InputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical|start"
                android:textSize="24sp"
                android:fontFamily="@font/poppins"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="64dp"
                android:paddingEnd="70dp"
                android:background="@drawable/glass_background"
                android:textColor="@color/user2_color"
                android:visibility="gone"
                android:elevation="0dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/user2RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/user2InputText"
                android:clipToPadding="false"
                android:paddingBottom="88dp"
                android:scrollbars="vertical" />

            <com.example.appdev.utils.LoadingDotsView
                android:id="@+id/user2LoadingDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/user2ClearButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_clear"
                android:background="@drawable/glass_button_background"
                android:padding="12dp"
                app:tint="@android:color/black"
                android:layout_margin="8dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/user2SpeakButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_mic"
                android:background="@drawable/glass_button_background"
                android:padding="16dp"
                android:scaleType="centerInside"
                app:tint="@color/user2_color"
                android:layout_margin="8dp"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- Divider with Icon -->
    <LinearLayout
        android:id="@+id/centerDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#80FFFFFF"/>

        <ImageView
            android:id="@+id/conversationalIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_translate_fragment"
            android:background="@drawable/glass_button_background"
            android:padding="12dp"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#80FFFFFF"/>
    </LinearLayout>

    <!-- User 1 Section (Bottom, Normal) -->
    <LinearLayout
        android:id="@+id/user1Section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Language Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/glass_pill_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_language"
                android:layout_marginStart="8dp"
                app:tint="@color/user1_color"/>

            <Spinner
                android:id="@+id/user1LanguageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@null"
                android:minWidth="120dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <!-- Translation Result Card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp">

            <TextView
                android:id="@+id/user1InputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical|start"
                android:textSize="24sp"
                android:fontFamily="@font/poppins"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="64dp"
                android:paddingEnd="70dp"
                android:background="@drawable/glass_background"
                android:textColor="@color/user1_color"
                android:visibility="gone"
                android:elevation="0dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/user1RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/user1InputText"
                android:clipToPadding="false"
                android:paddingBottom="88dp"
                android:scrollbars="vertical" />

            <com.example.appdev.utils.LoadingDotsView
                android:id="@+id/user1LoadingDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/user1ClearButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_clear"
                android:background="@drawable/glass_button_background"
                android:padding="12dp"
                app:tint="@android:color/black"
                android:layout_margin="8dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/user1SpeakButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_mic"
                android:background="@drawable/glass_button_background"
                android:padding="16dp"
                android:scaleType="centerInside"
                app:tint="@color/user1_color"
                android:layout_margin="8dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout> 