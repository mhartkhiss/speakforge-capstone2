<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_background"
    android:padding="16dp"
    tools:context=".fragments.BasicTranslationFragment">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/translatorSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/translatorIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/translator_icon_gemini"
                    android:layout_marginTop="4dp"
                    app:tint="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Translator"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#505050"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/currentTranslatorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gemini"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#202020"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="34dp"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_userpic"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"/>

    </LinearLayout>
    
    <!-- Mode Feedback -->
    <TextView
        android:id="@+id/modeFeedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/poppins"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:text="Casual Mode"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Language Selector -->
    <LinearLayout
        android:id="@+id/languageSelectorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/glass_pill_background"
        android:padding="6dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/currentLanguageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lang_button_orange"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="English"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_translate" 
            android:layout_marginHorizontal="8dp"
            app:tint="#505050"/>

        <!-- View that acts as the click target for spinner if needed, or just style the spinner container -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lang_button_blue">
            
            <!-- Hidden text for sizing if spinner is small -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bisaya"
                android:textSize="14sp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:visibility="invisible"/>

            <Spinner
                android:id="@+id/languageSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@null"/>
        </FrameLayout>

    </LinearLayout>

    <!-- Content Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/languageSelectorContainer"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:id="@+id/mainContentScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom">

                <!-- Result View (Always Visible for placeholder) -->
                <ScrollView
                    android:id="@+id/resultCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    android:visibility="visible"
                    android:elevation="0dp"
                    android:minHeight="200dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        
                        <TextView
                            android:id="@+id/placeholderText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Try the conversational style translation by clicking the message bubble icon"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="#505050"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/txtTranslatedText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:textColor="#202020"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:visibility="gone"/>
                            
                        <!-- Loading Animation (Inside result box) -->
                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/translatingAnimation"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/translating2"
                            android:visibility="gone"/>
                    </LinearLayout>
                </ScrollView>

                <!-- Input View (Visible by default) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/glass_background"
                    android:padding="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                         android:id="@+id/textInputLayout"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:minHeight="120dp"
                         app:hintEnabled="false"
                         app:boxBackgroundMode="none"
                         app:boxStrokeWidth="0dp"
                         app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="120dp"
                            android:background="@null"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:hint="Enter text to translate"
                            android:inputType="textMultiLine"
                            android:textColor="#212121"
                            android:textColorHint="#606060"
                            android:textSize="20sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="8dp">

                        <!-- Clear Button (Visible when typing) -->
                         <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/clearButton"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Clear"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone"
                            android:background="@drawable/glass_button_background"
                            android:textColor="#202020"
                            android:textAllCaps="false"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="20dp"/>

                        <!-- Translate Button (Visible when typing) -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/translateButton"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Translate"
                            android:visibility="gone"
                            android:background="@drawable/lang_button_blue"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="false"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="20dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Close/Stop Button -->
        <ImageButton
            android:id="@+id/stopTranslationButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/glass_button_background"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="80dp"/> <!-- Adjusted to be above input -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- History -->
        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            android:src="@drawable/ic_history"
            android:background="@drawable/glass_button_background"
            android:scaleType="centerInside"
            app:tint="#D84315"/>

        <Space android:layout_width="24dp" android:layout_height="wrap_content"/>

        <!-- Mic -->
        <ImageButton
            android:id="@+id/startSpeakingButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="16dp"
            android:src="@drawable/ic_mic"
            android:background="@drawable/glass_button_background"
            android:scaleType="centerInside"
            app:tint="#D84315"/>

        <Space android:layout_width="24dp" android:layout_height="wrap_content"/>

        <!-- Chat -->
        <ImageButton
            android:id="@+id/startConversationButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            android:src="@drawable/ic_conversational"
            android:background="@drawable/glass_button_background"
            android:scaleType="centerInside"
            app:tint="#1976D2"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>