<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/translation_background_gradient"
    android:windowSoftInputMode="adjustResize"
    tools:context=".fragments.BasicTranslationFragment">

    <!-- Decorative Wave Pattern -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/wave_pattern" />

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Title and History Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/translatorSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F5F7FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Translator"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="40dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="-8dp">

                        <ImageView
                            android:id="@+id/translatorIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/translator_icon_google" />

                        <TextView
                            android:id="@+id/currentTranslatorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Google Translate"
                            android:textColor="#212121"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mode feedback message -->
            <TextView
                android:id="@+id/modeFeedbackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_background"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="Casual Mode"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:visibility="gone"
                android:alpha="0" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/default_userpic"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Open profile" />

        </LinearLayout>

        <!-- Language Selection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/languageCard"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFF3E0">

                    <TextView
                        android:id="@+id/currentLanguageLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:fontFamily="@font/poppins"
                        android:text="English"
                        android:textColor="#FF5722"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/ic_arrow_translate"
                    app:tint="#757575" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <Spinner
                        android:id="@+id/languageSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:background="@null"
                        android:fontFamily="@font/poppins"
                        android:spinnerMode="dropdown" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Result Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/txtTranslatedText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:textColor="#9E9E9E"
                            android:textSize="22sp"
                            android:paddingBottom="16dp"/>

                    </ScrollView>

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/translatingAnimation"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:src="@drawable/translating2"
                        android:visibility="gone"
                        android:scaleType="fitCenter"/>

                </FrameLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/stopTranslationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_close"
                    android:visibility="gone"
                    app:backgroundTint="#F44336"
                    app:tint="#FFFFFF" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Wrapper for TextInputLayout -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="80dp"
                    android:fillViewport="true">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconMode="clear_text"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:hint="Enter text to translate"
                            android:inputType="textMultiLine"
                            android:padding="16dp"
                            android:scrollbars="vertical"
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </ScrollView>

                <!-- Container for buttons -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp">
                
                    <!-- Clear Button (centered) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/clearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Clear"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="16dp"
                        android:visibility="gone"
                        app:cornerRadius="24dp"
                        app:elevation="2dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:backgroundTint="#9E9E9E" />
                        
                    <!-- History Button (on the left) -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnHistory"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_toStartOf="@+id/startSpeakingButton"
                        android:layout_marginEnd="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_history"
                        android:contentDescription="Translation history"
                        android:scaleType="center"
                        app:fabSize="normal"
                        app:maxImageSize="24dp"
                        app:backgroundTint="#2196F3"
                        app:tint="#FFFFFF" />
                    
                    <!-- Microphone Button (in center, larger) -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/startSpeakingButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_mic"
                        android:contentDescription="Speech recognition"
                        android:scaleType="center"
                        app:fabSize="normal"
                        app:maxImageSize="28dp"
                        app:backgroundTint="#FF5722"
                        app:tint="#FFFFFF" />
                       
                    <!-- Conversation Button (on the right) -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/startConversationButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_toEndOf="@+id/startSpeakingButton"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_conversational"
                        android:contentDescription="Conversation mode"
                        android:scaleType="center"
                        app:fabSize="normal"
                        app:maxImageSize="24dp"
                        app:backgroundTint="#2196F3"
                        app:tint="#FFFFFF" />

                    <!-- Translate Button (centered) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/translateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Translate"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="16dp"
                        android:visibility="gone"
                        app:cornerRadius="24dp"
                        app:elevation="2dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:backgroundTint="#2196F3" />
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>
