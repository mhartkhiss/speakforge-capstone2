<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Left Message Container (Received Messages) -->
    <LinearLayout
        android:id="@+id/leftMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="80dp"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Voice Text Bubble -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#E3F2FD">

            <TextView
                android:id="@+id/leftVoiceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:text="Voice message text"
                android:textColor="#1976D2"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <!-- Translated Text (if available) -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#F5F5F5">

            <TextView
                android:id="@+id/leftTranslatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:text="Translated text"
                android:textColor="#424242"
                android:textSize="14sp"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/leftTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="10:30"
            android:textColor="#9E9E9E"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Right Message Container (Sent Messages) -->
    <LinearLayout
        android:id="@+id/rightMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Voice Text Bubble -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF5722">

            <TextView
                android:id="@+id/rightVoiceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:text="Voice message text"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <!-- Translated Text (if available) -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#F5F5F5">

            <TextView
                android:id="@+id/rightTranslatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:text="Translated text"
                android:textColor="#424242"
                android:textSize="14sp"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/rightTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/poppins"
            android:text="10:30"
            android:textColor="#9E9E9E"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>
