<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:fitsSystemWindows="true"
    tools:context=".ConnectChatActivity">

  <include
      android:id="@+id/includeUser"
      layout="@layout/item_contact"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <!-- Chat messages RecyclerView -->
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerViewChat"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@android:color/transparent"
      android:clipToPadding="false"
      android:paddingBottom="16dp"
      android:windowSoftInputMode="adjustResize"
      app:layout_constraintBottom_toTopOf="@id/inputContainer"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/includeUser"
      app:layout_constraintVertical_bias="0.9"
      app:stackFromEnd="true" />

  <!-- Reply container -->
  <LinearLayout
      android:id="@+id/replyContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#F5F5F5"
      android:elevation="8dp"
      android:padding="8dp"
      android:visibility="gone"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/inputContainer">

      <View
          android:layout_width="4dp"
          android:layout_height="match_parent"
          android:background="#3F51B5"
          android:layout_marginEnd="8dp" />

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

          <TextView
              android:id="@+id/replyToSenderName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Username"
              android:textStyle="bold"
              android:textColor="#3F51B5"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/replyToMessageText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Original message"
              android:textColor="#757575"
              android:maxLines="2"
              android:ellipsize="end"
              android:textSize="12sp" />
      </LinearLayout>

      <ImageButton
          android:id="@+id/buttonCancelReply"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center_vertical"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:src="@drawable/ic_close"
          android:tint="#757575" />
  </LinearLayout>

  <!-- New Modern Input Container -->
  <LinearLayout
      android:id="@+id/inputContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:background="@drawable/input_container_background"
      android:elevation="4dp"
      android:orientation="vertical"
      android:padding="12dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">

    <!-- Main button row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

      <!-- Chat Toggle Button (moved to left) -->
      <ImageButton
          android:id="@+id/buttonChatToggle"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/ic_chat"
          android:background="@drawable/circle_background"
          android:backgroundTint="#FFFFFF"
          android:padding="8dp"
          android:tint="#50C4ED"
          android:scaleType="fitCenter"
          android:contentDescription="Toggle text input"
          android:layout_marginEnd="8dp" />

      <!-- Change Translator Button -->
      <ImageButton
          android:id="@+id/buttonChangeTranslatorNew"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:src="@drawable/ic_translate"
          android:background="@drawable/circle_background"
          android:backgroundTint="#FFFFFF"
          android:padding="6dp"
          android:scaleType="fitCenter"
          android:contentDescription="Change translator"
          android:layout_marginEnd="8dp" />

      <!-- Language Selection Button (matching BasicTranslationFragment style) -->
      <androidx.cardview.widget.CardView
          android:id="@+id/languageSelectionCard"
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:layout_marginEnd="8dp"
          android:clickable="true"
          android:focusable="true"
          android:foreground="?attr/selectableItemBackground"
          app:cardCornerRadius="20dp"
          app:cardElevation="0dp"
          app:cardBackgroundColor="#FFF3E0">

          <TextView
              android:id="@+id/buttonLanguageSelection"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:paddingHorizontal="16dp"
              android:fontFamily="@font/poppins"
              android:text="English"
              android:textColor="#FF5722"
              android:textSize="16sp"
              android:contentDescription="Select language" />

      </androidx.cardview.widget.CardView>

      <!-- Spacer to push mic button to the right -->
      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1" />

      <!-- Voice/Speak Icon (moved to right) -->
      <ImageButton
          android:id="@+id/buttonVoiceIcon"
          android:layout_width="56dp"
          android:layout_height="56dp"
          android:src="@drawable/ic_voice"
          android:background="@drawable/circle_background"
          android:backgroundTint="#FF5722"
          android:padding="12dp"
          android:tint="#FFFFFF"
          android:scaleType="fitCenter"
          android:contentDescription="Voice input" />

    </LinearLayout>

    <!-- Text input container (hidden by default) -->
    <LinearLayout
        android:id="@+id/textInputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

      <!-- Text input field -->
      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/textInputMessage"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginEnd="8dp"
          android:hint="Type a message..."
          android:textColorHint="#999999"
          android:textColor="#333333"
          android:textSize="14sp"
          android:background="@android:color/transparent"
          android:padding="12dp"
          android:maxLines="3"
          android:inputType="textMultiLine"
          android:imeOptions="actionSend"
          android:fontFamily="@font/poppins" />

      <!-- Send button for text -->
      <ImageButton
          android:id="@+id/buttonSendText"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/ic_send"
          android:background="@drawable/circle_background"
          android:backgroundTint="#50C4ED"
          android:padding="8dp"
          android:tint="#FFFFFF"
          android:scaleType="fitCenter"
          android:contentDescription="Send message" />

    </LinearLayout>

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
