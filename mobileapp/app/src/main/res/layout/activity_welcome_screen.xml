<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_clean_background"
    android:fitsSystemWindows="true">

    <!-- App logo image with improved constraints -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:srcCompat="@drawable/speakforgewelcomeimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:elevation="4dp"
        android:transitionName="logoTransition"
        android:contentDescription="SpeakForge Logo" />

    <LinearLayout
        android:id="@+id/textContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:alpha="0"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Forging connections with AI-Powered Translation"
            android:textColor="#212121"
            android:textSize="24sp" />

        <TextSwitcher
            android:id="@+id/textSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:measureAllChildren="false"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out" />
            
        <LinearLayout
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            
            <View
                android:id="@+id/dot1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_selected"
                android:layout_marginEnd="8dp" />
                
            <View
                android:id="@+id/dot2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_unselected"
                android:layout_marginEnd="8dp" />
                
            <View
                android:id="@+id/dot3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_unselected"
                android:layout_marginEnd="8dp" />
                
            <View
                android:id="@+id/dot4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_unselected" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:alpha="0"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/poppins_semibold"
            android:text="GET STARTED"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:elevation="2dp"
            app:rippleColor="#33FFFFFF"
            android:letterSpacing="0.05" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWSkip"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:fontFamily="@font/poppins_semibold"
            android:text="CONTINUE AS GUEST"
            android:textSize="16sp"
            android:textColor="@color/blue"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            android:letterSpacing="0.05" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
