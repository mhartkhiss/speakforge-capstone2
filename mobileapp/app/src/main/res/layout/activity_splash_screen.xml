<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_clean_background"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:contentDescription="@string/app_name"
        android:transitionName="logoTransition"
        app:srcCompat="@drawable/speakforgewelcomeimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <com.example.appdev.TypeWriter
        android:id="@+id/splashCatchphrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textColor="#212121"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/splashLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Loading Container -->
    <LinearLayout
        android:id="@+id/settingsLoadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/splashCatchphrase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/settingsLoadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading app settings..."
            android:textSize="16sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/settingsProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:indeterminateTint="#387ADF" />

        <TextView
            android:id="@+id/settingsStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#888888"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOfflineMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Go Offline Mode"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            app:backgroundTint="#757575"
            app:cornerRadius="20dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>