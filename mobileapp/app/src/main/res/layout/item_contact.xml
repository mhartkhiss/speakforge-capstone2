<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/background"
    app:cardBackgroundColor="#F5F5F5"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/contact_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- End Session button container with rounded background -->
        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#EEEEEE">

            <ImageView
                android:id="@+id/buttonEndSession"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:tint="#FF5722"/>

        </androidx.cardview.widget.CardView>

        <!-- User Picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewUserPicture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_userpic"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/transparent"
            android:layout_marginEnd="12dp"/>

        <!-- Username -->
        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>


        <!-- History button container with rounded background -->
        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#EEEEEE">

            <ImageButton
                android:id="@+id/buttonHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_history"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#666666"
                android:contentDescription="Show message history"
                android:clickable="true"
                android:focusable="true"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>
