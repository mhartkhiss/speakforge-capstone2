<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable context-aware translation to improve message understanding in conversations."
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <Switch
        android:id="@+id/switch_context_enabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use conversation context"
        android:textSize="16sp"
        android:paddingVertical="8dp"/>

    <LinearLayout
        android:id="@+id/layout_depth_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Context depth (previous messages to include)"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            
            <SeekBar
                android:id="@+id/seekbar_context_depth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="20"
                android:progress="5"/>

            <TextView
                android:id="@+id/text_depth_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More messages provide better context but use more AI tokens."
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout> 